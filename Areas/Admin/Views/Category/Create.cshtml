@model CategoryCreateVM
@{
    ViewData["Title"] = "Create";
}

<form action="" method="post">

    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control">
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ParentCategoryId"></label>
        <input asp-for="ParentCategoryId" class="form-control">
        <span asp-validation-for="ParentCategoryId" class="text-danger"></span>
    </div>
    <span>IsDeleted</span>
    <div class="form-group">
        <label for="false">False</label>
        <input asp-for="IsDeleted" value="false" type="radio" id="false">
        <label for="true">True</label>
        <input asp-for="IsDeleted" value="true" type="radio" id="true">
        <span asp-validation-for="IsDeleted" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>




